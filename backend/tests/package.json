{
  "name": "new-pharmacy-backend-tests",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:unit": "NODE_ENV=test jest tests/unit.test.js --detectOpenHandles --forceExit",
    "test:integration": "NODE_ENV=test jest tests/integration.test.js --detectOpenHandles --forceExit",
    "test:security": "NODE_ENV=test jest tests/security.test.js --detectOpenHandles --forceExit",
    "test:performance": "NODE_ENV=test jest tests/performance.test.js --detectOpenHandles --forceExit --runInBand",
    "test:penetration": "NODE_ENV=test jest tests/penetration.test.js --detectOpenHandles --forceExit",
    "test:e2e": "playwright test tests/e2e.test.js",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --ci --coverage --detectOpenHandles --forceExit && playwright test tests/e2e.test.js",
    "test:security-suite": "npm run test:security && npm run test:penetration",
    "test:performance-suite": "npm run test:performance && npm run test:e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance && npm run test:e2e"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "routes/**/*.js",
      "controllers/**/*.js",
      "services/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!src/config/**",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage",
    "testTimeout": 30000,
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "maxWorkers": 1,
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleFileExtensions": ["js", "json"],
    "transform": {},
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "__ESM__": true
    }
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
